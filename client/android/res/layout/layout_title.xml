<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#004d79" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layout_title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:background="@drawable/ic_menu_back" >
        </ImageView>
        
        <TextView 
            android:layout_gravity="center_vertical"
            android:id="@+id/layout_title_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:visibility="gone"
            android:layout_marginLeft="2dp"/>
        
    </LinearLayout>
    
    <TextView 
            android:layout_centerInParent="true"
            android:id="@+id/layout_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Symbio-Freeborders TMC"/>

     <ImageView
            android:id="@+id/layout_title_menu_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/ic_menu_moreoverflow" >
        </ImageView>
    
</RelativeLayout>