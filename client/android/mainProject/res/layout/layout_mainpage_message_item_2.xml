<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    android:background="#f6f6f6"
    android:orientation="horizontal"
    android:padding="4dp" >

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/layout_mainpage_message_item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:background="@drawable/ic_contact_picture_2" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/layout_mainpage_message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:text="Let's Go Hiking! YEAH! Another style"
            android:textStyle="bold"
            android:textColor="@color/black" />
        
         <TextView
            android:id="@+id/layout_mainpage_message_item_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="2015-06-06 20:13:14"
            android:textColor="@color/black" />
        
       
        <TextView
            android:layout_below="@id/layout_mainpage_message_item_title"
            android:layout_above="@id/layout_mainpage_message_item_when"
            android:id="@+id/layout_mainpage_message_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textSize="16sp"
            android:maxLines="3"
            android:text="Dear fellow ToastMasters,let's go hiking.We love it ^()^~~~~"
            android:textColor="@color/gray" />
       
        
        
    </RelativeLayout>

