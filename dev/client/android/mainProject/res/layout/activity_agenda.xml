<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEAEB"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal">
        
	    <ImageView
	        android:id="@+id/back"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:scaleType="fitXY"
	        android:layout_height="match_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/agenda_1" />
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="0dp"
	        android:layout_weight="7"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_alignBottom="@id/back"
	        android:background="#004D77"
	        android:layout_toRightOf="@+id/back"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
	        android:text="Meeting" />
	
	    <ImageView
	        android:id="@+id/agendaMenu"
            android:onClick="onClick"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:scaleType="fitXY"
	        android:layout_height="match_parent"
	        android:layout_alignBottom="@+id/back"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/agenda_3" />    
    </LinearLayout>
    


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/title_layout"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/agendaNO"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="S.F.B TMC No.188 Meeting" />
        <TextView
            android:id="@+id/agendaTime"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:textSize="10sp"
            android:textColor="#626262"
            android:text="2015-06-09 19:00:00" />
        
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="2dp"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/agenda_4" />

    	<TextView
	        android:id="@+id/textView1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
            android:layout_weight="2"
	        android:background="#FFFFFF"
            android:textColor="#000000"
	        android:text="Theme:Dream" />
    	
    	 <ImageView
            android:id="@+id/imageView3"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/agenda_5" />

    	<TextView
	        android:id="@+id/textView2"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
            android:layout_weight="2"
	        android:background="#FFFFFF"
            android:textColor="#000000"
	        android:text="CC1 Mankel is Mango - By Mankel" />
   
    	 <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"
            android:src="@drawable/agenda_6" />

    	<TextView
	        android:id="@+id/textView3"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
            android:layout_weight="2"
	        android:background="#FFFFFF"
            android:textColor="#000000"
	        android:text="CC8 Home Sweet Home - By Laila Tungcab" />    		

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/agenda_7" />


</LinearLayout>