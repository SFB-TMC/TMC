<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/notification_page_item_layout" >

    <TextView
        style="@style/notification_page_item_category_activity"
        android:text="ACTIVITY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/layout_mainpage_message_item_icon"
            style="@style/notification_page_item_image" />

        <LinearLayout style="@style/notification_page_item_text_layout" >

            <TextView
                style="@style/notification_page_item_title"
                android:text="Outing is always our favourite!" />

            <TextView
                style="@style/notification_page_item_abstract"
                android:text="We can&apos;t wait to go outing ~~~ GO PARTY ~~~~~~~~~~~~" />

            <TextView
                style="@style/notification_page_item_datetime"
                android:text="2015-06-06 18:08:08" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>