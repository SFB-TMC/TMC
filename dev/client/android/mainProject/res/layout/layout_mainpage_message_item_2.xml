<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/selector_comon_list_item"
    android:orientation="horizontal"
    android:padding="4dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/layout_mainpage_message_item_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:background="@drawable/ic_contact_picture_2" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <TextView
            android:id="@+id/layout_mainpage_message_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:text="Let&apos;s Go Hiking! YEAH! Another style"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/layout_mainpage_message_item_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="2015-06-06 20:13:14"
            android:textColor="#333333"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/layout_mainpage_message_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_mainpage_message_item_when"
            android:layout_below="@id/layout_mainpage_message_item_title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:maxLines="3"
            android:text="Dear fellow ToastMasters,let&apos;s go hiking.We love it ^()^~~~~"
            android:textColor="#bbbbbb"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>